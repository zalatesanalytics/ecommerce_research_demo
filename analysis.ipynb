#Cell 1 – imports & load data

import pandas as pd
import matplotlib.pyplot as plt

%matplotlib inline

df = pd.read_csv("ecommerce_search_logs.csv", parse_dates=["timestamp"])
df.head()

#Cell 32 Basic KPIs

total_searches = len(df)
total_clicks = df["clicked"].sum()
total_purchases = df["purchased"].sum()
total_revenue = df["revenue"].sum()

ctr = total_clicks / total_searches
post_click_cr = total_purchases / total_clicks
rps = total_revenue / total_searches

print(f"Total searches: {total_searches}")
print(f"CTR: {ctr:.2%}")
print(f"Post-click CR: {post_click_cr:.2%}")
print(f"Revenue per search: ${rps:,.2f}")

#Cell 3. Cell 3 – query-level aggregates

query_grp = (
    df.groupby("normalized_query")
      .agg(
          searches=("normalized_query", "count"),
          clicks=("clicked", "sum"),
          purchases=("purchased", "sum"),
          revenue=("revenue", "sum")
      )
      .reset_index()
)
query_grp["ctr"] = query_grp["clicks"] / query_grp["searches"]
query_grp["post_click_cr"] = query_grp["purchases"] / query_grp["clicks"].replace(0, pd.NA)
query_grp["rps"] = query_grp["revenue"] / query_grp["searches"]

query_grp.sort_values("revenue", ascending=False).head(10)

#Cell 4 Plots 
# Search volume vs revenue
fig, ax = plt.subplots(figsize=(8,5))
ax.scatter(query_grp["searches"], query_grp["revenue"])
ax.set_xlabel("Searches")
ax.set_ylabel("Revenue")
ax.set_title("Search Volume vs Revenue")
plt.tight_layout()
plt.show()

# CTR distribution
fig, ax = plt.subplots(figsize=(6,4))
ax.hist(query_grp["ctr"].dropna(), bins=10)
ax.set_xlabel("CTR")
ax.set_title("Distribution of Query CTR")
plt.tight_layout()
plt.show()